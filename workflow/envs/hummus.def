Bootstrap: docker
From: ubuntu:20.04

%environment
    # PATHS
    export PATH=/opt/miniconda3/bin:$PATH
    . /opt/miniconda3/etc/profile.d/conda.sh
    conda activate env

%post

    # update apt
    apt update -y

    # basic packages (~2 min)
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends tzdata
    apt install -y build-essential  \
                   gcc \
                   cmake \
                   wget \
                   curl \
                   libcurl4-openssl-dev \
                   libssl-dev \
                   libxml2-dev \
                   libcairo2-dev \
                   libxt-dev \
                   libopenblas-dev

    # conda
    mkdir -p /opt/miniconda3
    cd /opt/miniconda3 
    wget https://repo.continuum.io/miniconda/Miniconda3-latest-Linux-x86_64.sh
    bash Miniconda3-latest-Linux-x86_64.sh -p /opt/miniconda3 -b -f
    rm Miniconda3-latest-Linux-x86_64.sh
    export PATH=/opt/miniconda3/bin:$PATH

    # Install conda and mamba
    conda update conda -y
    . /opt/miniconda3/etc/profile.d/conda.sh
    conda install -n base -c conda-forge mamba

    # Create env
    mamba create -y -n=env -c conda-forge -c bioconda \
    python=3.10 \
    r-base==4.2 \
    r-monocle3 \
    r-devtools \
    r-reticulate \
    r-sf \
    r-terra \
    r-lme4 \
    r-ggrastr \
    r-cairo \
    r-doparallel \
    r-dorng \
    bioconductor-bsgenome.hsapiens.ucsc.hg38 \
    bioconductor-bsgenome.mmusculus.ucsc.mm10 \
    bioconductor-ensdb.hsapiens.v86 \
    bioconductor-ensdb.mmusculus.v79

    # Install hummuspy from pip
    conda activate env
    pip install hummuspy

    # Install cicero, monocle3 (and omnipath) from github
    Rscript -e "devtools::install_github('saezlab/OmnipathR')" # might not be necessary
    Rscript -e "devtools::install_github('cole-trapnell-lab/cicero-release', ref = 'monocle3')"

    # Install hummus R package from github
    Rscript -e "devtools::install_github('cantinilab/HuMMuS', upgrade = 'never')"

    # Remove cache for lighter containers
    pip cache purge
    conda clean -a -y
