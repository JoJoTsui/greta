Bootstrap: docker
From: ubuntu:20.04


%environment
    export PATH=/opt/:$PATH
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate env

%post

    # update apt
    apt update -y

    # basic packages (~2 min)
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends tzdata
    apt install -y build-essential  \
                   gcc \
                   cmake \
                   wget \
                   curl \
                   libcurl4-openssl-dev \
                   libssl-dev \
                   libxml2-dev \
                   libcairo2-dev \
                   libxt-dev \
                   libopenblas-dev \
                   bedtools

    # conda
    wget -O Miniforge3.sh "https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-$(uname)-$(uname -m).sh"
    bash Miniforge3.sh -b -p "/opt/conda"
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate

    # Create env
    mamba create -y -n=env -c conda-forge -c bioconda \
    python=3.10 \
    r-base==4.3 \
    r-matrix \
    bioconductor-summarizedexperiment \
    bioconductor-singlecellexperiment
    bioconductor-genomicranges \
    r-dplyr \
    r-ggplot2 \
    bioconductor-chromvar \
    r-doparallel \
    r-dosnow \
    r-ggrepel \
    bioconductor-complexheatmap \
    r-pbmcapply \
    r-tibble \
    r-scales \
    r-reshape2 \
    r-rmpfr \
    r-optmatch \
    r-fnn \
    r-cowplot \
    bioconductor-motifmatchr \
    r-networkd3 \
    r-knitr \
    r-rmarkdown \
    r-ggrastr \
    r-uwot \
    r-mass \
    bioconductor-bsgenome.hsapiens.ucsc.hg38 \
    bioconductor-bsgenome.mmusculus.ucsc.mm10 \
    jupyterlab \
    r-irkernel \
    mudata \
    r-devtools \
    bioconductor-rhdf5

    # Install figr
    conda activate env
    Rscript -e "devtools::install_github('caleblareau/BuenColors@f1bc8e640d129ef319a0db49b169a64b00026e00', upgrade = 'never')"
    Rscript -e "devtools::install_github('buenrostrolab/FigR@094f5aa036aa9dc09b85d60c13dd9ead7da416fd', upgrade = 'never')"

    # Remove cache for lighter containers
    pip cache purge
    conda clean -a -y