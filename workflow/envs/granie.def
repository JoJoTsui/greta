Bootstrap: docker
From: ubuntu:20.04

%environment
    # PATHS
    export PATH=/opt/miniconda3/bin:$PATH
    . /opt/miniconda3/etc/profile.d/conda.sh
    conda activate env

%post

    # update apt
    apt update -y

    # basic packages (~2 min)
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends tzdata
    apt install -y build-essential  \
                   gcc \
                   cmake \
                   wget \
                   curl \
                   libcurl4-openssl-dev \
                   libssl-dev \
                   libxml2-dev \
                   libcairo2-dev \
                   libxt-dev \
                   libopenblas-dev

    # Mamba
    mkdir -p /opt/miniconda3
    cd /opt/miniconda3 
    wget https://repo.continuum.io/miniconda/Miniconda3-latest-Linux-x86_64.sh
    bash Miniconda3-latest-Linux-x86_64.sh -p /opt/miniconda3 -b -f
    rm Miniconda3-latest-Linux-x86_64.sh
    export PATH=/opt/miniconda3/bin:$PATH

    # Install conda and mamba
    conda update conda -y
    . /opt/miniconda3/etc/profile.d/conda.sh
    conda install -n base --override-channels -c conda-forge mamba 'python_abi=*=*cp*'

    # Create env
    mamba create -y -n=env -c conda-forge -c bioconda \
    python=3.10 \
    r-base==4.2 \
    r-futile.logger \
    r-checkmate \
    r-patchwork \
    r-reshape2 \
    r-data.table \
    r-matrixstats \
    r-matrix \
    bioconductor-genomicranges \
    r-rcolorbrewer \
    bioconductor-complexheatmap \
    bioconductor-deseq2 \
    r-circlize \
    r-progress \
    r-stringr \
    r-scales \
    r-igraph \
    bioconductor-s4vectors \
    r-ggplot2 \
    r-rlang \
    bioconductor-biostrings \
    bioconductor-genomeinfodb \
    bioconductor-summarizedexperiment \
    r-forcats \
    r-gridextra \
    bioconductor-limma \
    r-tidyselect \
    r-readr \
    r-tidyr \
    r-dplyr \
    r-magrittr \
    r-tibble \
    r-viridis \
    r-colorspace \
    bioconductor-biomart \
    bioconductor-topgo \
    bioconductor-annotationhub \
    bioconductor-ensembldb \
    r-devtools \
    bioconductor-rhdf5

    # Install granie
    conda activate env
    Rscript -e "devtools::install_gitlab('grp-zaugg/GRaNIE@b5726a8a6516f297267492a6fbeb5fd7cfbd52b5', host = 'git.embl.de', subdir = 'src/GRaNIE', upgrade = 'never')"

    # Remove cache for lighter containers
    pip cache purge
    conda clean -a -y
