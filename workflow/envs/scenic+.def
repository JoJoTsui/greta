Bootstrap: docker
From: ubuntu:20.04


%environment
    export PATH=/opt/:$PATH
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate env

%post

    # update apt
    apt update -y

    # basic packages (~2 min)
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends tzdata
    apt install -y build-essential  \
                   gcc \
                   cmake \
                   wget \
                   curl \
                   libcurl4-openssl-dev \
                   libssl-dev \
                   libxml2-dev \
                   libcairo2-dev \
                   libxt-dev \
                   libopenblas-dev \
                   bedtools \
                   git

    # conda
    wget -O Miniforge3.sh "https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-$(uname)-$(uname -m).sh"
    bash Miniforge3.sh -b -p "/opt/conda"
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate

    # Create env
    mamba create -y -n=env -c conda-forge -c bioconda \
    python=3.11.0 \
    pip \
    numpy \
    numba==0.59.0 \
    macs2 \
    cython==0.29.37 \
    fit-sne \
    papermill \
    bs4 \
    lxml \
    tspex \
    plotly \
    python-kaleido \
    pyvis \
    velocyto.py \
    pygam \
    fa2 \
    scanpy==1.8.2 \
    muon \
    polars \
    pyfaidx \
    loompy \
    python-annoy \
    ipykernel \
    gensim \
    ipympl \
    leidenalg \
    pyopenssl \
    pandas\
    pybedtools \
    pyranges \
    pybigwig \
    pybiomart \
    pyfasta \
    python-levenshtein \
    python-igraph \
    gseapy \
    snakemake==8.5.5 \
    tqdm \
    jupyterlab==3.6.7 \
    scikit-learn==1.3.2 \
    scipy==1.12.0 \
    joblib==1.3.2 \
 

    # Install scenic+
    conda activate env
    pip install \
    igv-jupyter \
    loomxpy \
    git+https://github.com/aertslab/scenicplus

    # Remove cache for lighter containers
    pip cache purge
    conda clean -a -y
