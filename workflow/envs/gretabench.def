Bootstrap: docker
From: ubuntu:20.04


%environment
    export PATH=/opt/:$PATH
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate env

%post

    # update apt
    apt update -y

    # basic packages (~2 min)
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends tzdata
    apt install -y build-essential  \
                   gcc \
                   libstdc++6 \
                   cmake \
                   wget \
                   curl \
                   git \
                   libcurl4-openssl-dev \
                   libssl-dev \
                   libxml2-dev \
                   libcairo2-dev \
                   libxt-dev \
                   libopenblas-dev \
                   bedtools \
                   tabix

    # conda
    wget -O Miniforge3.sh "https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-$(uname)-$(uname -m).sh"
    bash Miniforge3.sh -b -p "/opt/conda"
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate

    # Create env
    mamba create -y -n=env -c conda-forge -c bioconda \
    python=3.10 \
    pip \
    muon==0.1.5 \
    scanpy==1.9.8 \
    leidenalg \
    harmonypy \
    jupyterlab \
    r-base==4.3 \
    bioconductor-biomart \
    cython \
    polars \
    hmmlearn \
    plotly \
    pooch \
    python-kaleido \
    multiprocess \
    pyarrow \
    rustworkx \
    dill \
    macs3 \
    scrublet \
    decoupler-py==1.7.0 \
    py-xgboost \
    pyranges \
    statannotations \
    numba==0.59.1

    conda activate env
    pip install mofapy2 marsilea==0.3.2 snapatac2==2.6.0 celloracle==0.18.0 scipy==1.12.0
    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/opt/conda/lib

    # Remove cache for lighter containers
    pip cache purge
    conda clean -a -y
