Bootstrap: docker
From: ubuntu:20.04


%environment
    export PATH=/opt/:$PATH
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate env

%post

    # update apt
    apt update -y

    # basic packages (~2 min)
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends tzdata
    apt install -y build-essential  \
                   gcc \
                   libstdc++6 \
                   cmake \
                   wget \
                   curl \
                   libcurl4-openssl-dev \
                   libssl-dev \
                   libxml2-dev \
                   libcairo2-dev \
                   libxt-dev \
                   libopenblas-dev \
                   bedtools \
                   git

    # conda
    wget -O Miniforge3.sh "https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-$(uname)-$(uname -m).sh"
    bash Miniforge3.sh -b -p "/opt/conda"
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate

    # Create env
    mamba create -y -n env -c conda-forge -c bioconda \
    python=3.11.8 \
    pip==24.0 \
    numpy \
    numba \
    macs2 \
    cython \
    fit-sne \
    papermill \
    bs4 \
    lxml \
    tspex \
    plotly \
    python-kaleido \
    pyvis \
    velocyto.py \
    pygam \
    fa2 \
    muon \
    scanpy==1.9.8 \
    polars \
    pyfaidx \
    loompy \
    python-annoy \
    ipykernel \
    gensim \
    ipympl \
    leidenalg \
    pyopenssl \
    pandas \
    pyarrow \
    pybedtools \
    pyranges \
    pybigwig \
    pybiomart \
    pyfasta \
    python-levenshtein \
    python-igraph \
    gseapy \
    snakemake \
    tqdm \
    jupyterlab \
    scikit-learn \
    scipy \
    joblib \
    gcc \
    gxx \
    libgcc \
    matplotlib \
    kiwisolver \
    polars \
    mallet \
    dask \
    rust

    # Install scenic+
    conda activate env
    pip install igv-jupyter loomxpy

    git clone https://github.com/aertslab/scenicplus.git
    cd scenicplus
    git checkout e82b82f14b76618b850dfe442efc2421bb34f3b4
    pip install .
    pip install --no-dependencies --force-reinstall git+https://github.com/aertslab/pycisTopic.git@53fe3f7d7514d32d83f0e9baae60a1412eb2b3b7 polars==1.18.0 git+https://github.com/aertslab/scatac_fragment_tools.git@6c1b6263abc82bc09d28a80d8a4baf6ceef4399a
    
    # Update memory of mallet
    sed -i.bak 's/MEMORY=[0-9]\+g/MEMORY=100g/' /opt/conda/envs/env/bin/mallet

    # Remove cache for lighter containers
    pip cache purge
    conda clean -a -y
