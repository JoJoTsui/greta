Bootstrap: docker
From: ubuntu:20.04


%environment
    export PATH=/opt/:$PATH
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate env

%post

    # update apt
    apt update -y

    # basic packages (~2 min)
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends tzdata
    apt install -y build-essential  \
                   gcc \
                   libstdc++6 \
                   cmake \
                   wget \
                   curl \
                   libcurl4-openssl-dev \
                   libssl-dev \
                   libxml2-dev \
                   libcairo2-dev \
                   libxt-dev \
                   libopenblas-dev \
                   bedtools \
                   git

    # conda
    wget -O Miniforge3.sh "https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-$(uname)-$(uname -m).sh"
    bash Miniforge3.sh -b -p "/opt/conda"
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate

    # Create env
    mamba create -y -n=env -c conda-forge -c bioconda \
    python=3.11.0 \
    pip \
    numpy \
    numba \
    macs2 \
    cython \
    fit-sne \
    papermill \
    bs4 \
    lxml \
    tspex \
    plotly \
    python-kaleido \
    pyvis \
    velocyto.py \
    pygam \
    fa2 \
    muon==0.1.5 \
    scanpy==1.9.8 \
    polars \
    pyfaidx \
    loompy \
    python-annoy \
    ipykernel \
    gensim \
    ipympl \
    leidenalg \
    pyopenssl \
    pandas\
    pybedtools \
    pyranges \
    pybigwig \
    pybiomart \
    pyfasta \
    python-levenshtein \
    python-igraph \
    gseapy \
    snakemake==8.5.5 \
    tqdm \
    jupyterlab \
    scikit-learn \
    scipy \
    joblib \
    gcc=12.3.0 \
    gxx=12.3.0 \
    libgcc

    # Install scenic+
    conda activate env
    pip install muon \
    igv-jupyter \
    loomxpy

    git clone https://github.com/aertslab/scenicplus.git
    cd scenicplus
    pip install .
    
    # Install Mallet to speed up LDA modelling with cistopic
    wget https://github.com/mimno/Mallet/releases/download/v202108/Mallet-202108-bin.tar.gz
    tar -xf Mallet-202108-bin.tar.gz

    # Remove cache for lighter containers
    pip cache purge
    conda clean -a -y
